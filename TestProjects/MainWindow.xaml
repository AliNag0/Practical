<Window x:Class="TestProjects.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestProjects"
        mc:Ignorable="d"
        Title="Simple Test App" Height="450" Width="800" 
        WindowStartupLocation="CenterScreen"
        MinHeight="450"
        MinWidth="600"
        Background="#FFFAFAF9">

    <DockPanel>

        <!-- Основное содержимое -->
        <ScrollViewer DockPanel.Dock="Top" VerticalScrollBarVisibility="Auto">
            <StackPanel HorizontalAlignment="Center" Margin="20">

                <!-- Панель редактирования вопроса -->
                <StackPanel x:Name="editPanel" Visibility="Visible" Width="400">
                    <Label Content="Создание теста" FontSize="18" Foreground="Black" FontWeight="Bold"/>

                    <Label Content="Вопрос:" Margin="0,10,0,0"/>
                    <TextBox x:Name="txtQuestion" Height="60" Background="White" BorderBrush="Black"/>

                    <Label Content="Варианты ответов:" Margin="0,10,0,0"/>
                    <StackPanel>
                        <RadioButton x:Name="rb1" GroupName="Answers" Margin="5">
                            <TextBox x:Name="txtAnswer1" Width="300" Background="White" BorderBrush="Black"/>
                        </RadioButton>
                        <RadioButton x:Name="rb2" GroupName="Answers" Margin="5">
                            <TextBox x:Name="txtAnswer2" Width="300" Background="White" BorderBrush="Black"/>
                        </RadioButton>
                        <RadioButton x:Name="rb3" GroupName="Answers" Margin="5">
                            <TextBox x:Name="txtAnswer3" Width="300" Background="White" BorderBrush="Black"/>
                        </RadioButton>
                    </StackPanel>
                </StackPanel>

                <!-- Панель прохождения теста -->
                <StackPanel x:Name="testPanel" Visibility="Collapsed" Width="400">
                    <Label x:Name="lblQuestion" FontSize="16" Foreground="#FF2E7D32" FontWeight="Bold"/>

                    <RadioButton x:Name="testRb1" GroupName="Test" Margin="5" Content="Ответ 1"/>
                    <RadioButton x:Name="testRb2" GroupName="Test" Margin="5" Content="Ответ 2"/>
                    <RadioButton x:Name="testRb3" GroupName="Test" Margin="5" Content="Ответ 3"/>
                    <RadioButton x:Name="testRb4" GroupName="Test" Margin="5" Content="Ответ 4"/>
                </StackPanel>

                <!-- Результаты -->
                <StackPanel x:Name="resultPanel" Visibility="Collapsed" Width="400">
                    <Label x:Name="lblResult" FontSize="18" Foreground="#FF2E7D32" FontWeight="Bold"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Кнопки всегда внизу -->
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Margin="10" Width="720" RenderTransformOrigin="0.502,0.567">
            <Button x:Name="btnAdd" Content="Добавить вопрос" 
                    Background="#FF90F994" BorderBrush="#FFA5D6A7" 
                    Foreground="#FF1B5E20" Padding="10,5" Margin="5"
                    Click="BtnAdd_Click" Height="60"/>

            <Button x:Name="btnStartTest" Content="Начать тест" 
                    Background="#FF76BD79" BorderBrush="#FF81C784" 
                    Foreground="#FFF1F8E9" Padding="10,5" Margin="5"
                    Click="BtnStartTest_Click" Height="60"/>

            <Button x:Name="btnPrev" Content="Назад" 
                    Background="#FFE8F5E9" BorderBrush="#FFA5D6A7" 
                    Foreground="#FF1B5E20" Padding="10,5" Margin="5"
                    Click="BtnPrev_Click" Visibility="Collapsed"/>

            <Button x:Name="btnNext" Content="Далее" 
                    Background="#FFA5D6A7" BorderBrush="#FF81C784" 
                    Foreground="#FFF1F8E9" Padding="10,5" Margin="5"
                    Click="BtnNext_Click" Visibility="Collapsed"/>

            <Button x:Name="btnRestart" Content="Создать новый тест" 
                    Background="#FFA5D6A7" BorderBrush="#FF81C784" 
                    Foreground="#FFF1F8E9" Padding="10,5" Margin="5"
                    Click="BtnRestart_Click" Visibility="Collapsed"/>
        </StackPanel>
    </DockPanel>
</Window>